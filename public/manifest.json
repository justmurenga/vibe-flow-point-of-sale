{
  "name": "Vibe POS - Mobile Cashier",
  "short_name": "Vibe POS",
  "description": "Mobile point of sale system for cashiers with offline capabilities",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["business", "productivity", "finance"],
  "icons": [
